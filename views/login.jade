doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Vintage Addiction
        link(rel="stylesheet", href="stylesheets/login.css")
        link(rel="preconnect", href="https://fonts.googleapis.com")
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin="")
        link(href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap", rel="stylesheet")
        link(rel='stylesheet', href='https://cdn-uicons.flaticon.com/uicons-bold-rounded/css/uicons-bold-rounded.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp", crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js", integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N", crossorigin="anonymous")

body
    div.container
        section.vh-100
            div.container.py-5.h-100
                div.row.d-flex.justify-content-center.align-items-center.h-100
                    div.col-12.col-md-8.col-lg-6.col-xl-5
                        div.row.justify-content-center.center
                            img.logo(src="images/logo.png")
                        div.card.shadow-2-strong(style="border-radius: 1rem;")
                            div.card-body.p-5
                                h3.mb-4.text-center Let's go!
                                form(action="/login" method="post")
                                    div.form-outline.mb-4
                                        label.form-label(for="typeEmailX-2")
                                        i.fi.fi-br-envelope Email
                                        input.form-control.form-control-lg(type="email" name="email" id="typeEmailX-2" placeholder="Enter your email" onclick="this.placeholder=''" onblur="this.placeholder='Enter your email'" required)
                                    div.form-outline.mb-4
                                        label.form-label(for="typePasswordX-2")
                                        i.fi.fi-br-lock Password
                                        input.form-control.form-control-lg(type="password" name="password" id="typePasswordX-2" placeholder="Enter your password" onclick="this.placeholder=''" onblur="this.placeholder='Enter your password'" required)
                                    div.d-grid.gap-2.d-md-flex.justify-content-md-center
                                        button.btn.btn-primary.btn-lg.btn-block(type="submit") Submit
                                div#contenedor
                                div.aviso.mb-4.text-center
                                    p You do not have an account?
                                        a(href="/register") Sign up!


block scripts
    script(src="/javascripts/login.js")




