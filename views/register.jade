body
    .container
        section.vh-100
            .container.py-5.h-100
                .row.d-flex.justify-content-center.align-items-center.h-100
                    .col-12.col-md-8.col-lg-6.col-xl-5
                        .row.justify-content-center.center
                            img.logo(src="images/logo.png")
                        .card.shadow-2-strong(style="border-radius: 1rem;")
                            .card-body.p-5
                                h3#demo.mb-5.text-center Let's go! But firts...
                                form#reg_form(action="/register", method="post")
                                    .form-outline.mb-4
                                        label.form-label(for="username")
                                        i.fi.fi-br-user Username
                                        input(type="text", name="username", id="username", class="form-control form-control-lg", placeholder="Enter a username", onclick="this.placeholder=''", onblur="this.placeholder='Enter a username'", required="")
                                    .form-outline.mb-4
                                        label.form-label(for="email")
                                        i.fi.fi-br-envelope Email
                                        input(type="email", name="email", id="email", class="form-control form-control-lg", placeholder="Enter an email", onclick="this.placeholder=''", onblur="this.placeholder='Enter an email'", required="")
                                    .form-outline.mb-4
                                        label.form-label(for="password")
                                        i.fi.fi-br-lock Password
                                        input(type="password", name="password", id="password", class="form-control form-control-lg", placeholder="Enter a password", onclick="this.placeholder=''", onblur="this.placeholder='Enter a password'", required="")
                                    .form-outline.mb-4
                                        label.form-label
                                        i.fi.fi-br-apps Favorite Room
                                        select.form-select(name="room", id="room", aria-label="Default select example", required="")
                                            option(value="", disabled="", selected="", hidden="")  Select a room
                                            option(value="1") Room 1
                                            option(value="2") Room 2
                                            option(value="3") Room 3
                                            option(value="4") Room 4
                                    input(type="hidden", name="avatar", id="avatar", required="")
                                    .col-sm.mb-4
                                        label
                                        i.fi.fi-br-circle-user Choose your avatar
                                        #registerAvatar.d-flex.flex-wrap.justify-content-space-between
                                            img.avatar#t1(name="avatars", onclick="getAvatar('t1')", src="images/punk01.png", alt="Avatar")
                                            img.avatar#t2(name="avatars", onclick="getAvatar('t2')", src="images/punk02.png", alt="Avatar")
                                            img.avatar#t3(name="avatars", onclick="getAvatar('t3')", src="images/punk03.png", alt="Avatar")
                                            img.avatar#t4(name="avatars", onclick="getAvatar('t4')", src="images/punk04.png", alt="Avatar")
                                            img.avatar#t5(name="avatars", onclick="getAvatar('t5')", src="images/punk05.png", alt="Avatar")
                                            img.avatar#t6(name="avatars", onclick="getAvatar('t6')", src="images/punk06.png", alt="Avatar")
                                            img.avatar#t7(name="avatars", onclick="getAvatar('t7')", src="images/punk07.png", alt="Avatar")
                                            img.avatar#t8(name="avatars", onclick="getAvatar('t8')", src="images/punk08.png", alt="Avatar")
                                            img.avatar#t9(name="avatars", onclick="getAvatar('t9')", src="images/punk09.png", alt="Avatar")
                                            img.avatar#t10(name="avatars", onclick="getAvatar('t10')", src="images/punk10.png", alt="Avatar")

                                    div.d-grid.gap-2.d-md-flex.justify-content-md-center
                                        button.btn.btn-primary.btn-lg.btn-block(type="submit") Submit
                                    div#contenedor
                                    div.aviso.mb-4.text-center
                                        p Do you already have an account?
                                            a(href="/login") Login!


block scripts
