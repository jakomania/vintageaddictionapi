body
  header
    nav.navbar.bg-body-tertiary.fixed-top(style="background-color: #480b97 !important;")
      .container.col-12.col-md-12.col-lg-12.col-xl-12
        a.navbar-brand(href="/")
          img.logo(src="images/logo.png")
        a.nav-link(href="/logout", onclick="logOut()")
          i.fi.fi-br-address-card.white(style="font-size:28px;")
  .container.col-12.col-md-12.col-lg-12.col-xl-12(style="margin-top: 120px;")
    .row.justify-content-md-center.white
      .col
        h2#user #{user.username} DASHBOARD
    .row.justify-content-md-center.white
      .col
        p#room FAVORITE ROOM: #{user.room}
    div.row.justify-content-center(draggable="true")
      img#avatar.bradius(style="width: 100px;", alt="Avatar", src="#{user.avatar}")
    .row.justify-content-center.text-center.white.rowdash
      h2(style="font-weight: 700") Chose your room!
      p(style="font-weight: 300") To chose your room drag your avatar to the room's number :)
    .d-flex.justify-content-center
      #room01.col-2.text-center.salas
        img(name="rooms", src="images/room01.png", alt="Room", class="bradius salanum room-avatar")
        div.empty
          p.m-3.white Empty
        div.waiting
          p.m-3.white Waiting
        div.full
          p.m-3.white Full
        div.leave
